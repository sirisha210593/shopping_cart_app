@model SHOPPINGCARTPROJECT.Models.Shopping



<h2>Product Description</h2>


    <div class="panel panel-default">
        <div class="panel-heading">@Model.ProductName</div>
        <div class="panel-body">
            <div class="col-sm-3 col-md-6" style="color:blue">
                <a>
                    <img src="@Url.Content(@Model.Image)" width="300" height="400" />
                </a>

            </div>
            <div class="col-sm-9 col-md-6">
                <h3><span  style="color:black"><b>Product Name:</b></span></h3>

                <h6><span  style="color:black">@Model.ProductName</span></h6>

                <h3><span  style="color:black"><b>Features:</b></span></h3>

                <h6><span  style="color:black">@Model.Description</span></h6>

                <h3><span  style="color:black"><b>Price:</b></span></h3>

                <h6><span style="color:black">@Model.Price.ToString("C")</span></h6>


            </div>


        </div>

        <div>

            <a id="btn_add" href="@Url.Action("Add", "Cart",Model)" class="btn btn-primary" style="margin-left:60px">
                <span class="glyphicon glyphicon-shopping-cart"></span> Add To Cart
            </a>

            <a id="btn_add" href="@Url.Action("Index", "Home")" class="btn btn-primary" style="margin-left:60px">
                <span class="glyphicon glyphicon-eye-open"></span> Continue shopping
            </a>
            <br />
            <br />

        </div>
    </div>